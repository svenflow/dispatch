{
  "manifest_version": 3,
  "name": "Chrome Control",
  "version": "1.0.0",
  "description": "Local automation control for Chrome",

  "permissions": [
    "tabs",
    "tabGroups",
    "scripting",
    "activeTab",
    "storage",
    "cookies",
    "windows",
    "debugger",
    "nativeMessaging",
    "downloads",
    "alarms",
    "identity"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "action": {
    "default_title": "Chrome Control",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
